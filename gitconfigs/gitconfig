[user]
  name  = Stimim
  email = death1048576@gmail.com

[color]
  diff   = auto
  status = auto
  branch = auto
  interactive = auto
  log = auto
  ui = true
  pager = true

[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
  excludesfile = ~/dotfiles/gitconfigs/gitignore

[alias]
  ci = commit
  co = checkout
  st = status
  dw = diff --color-words
  di = diff
  br = branch
  lg = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

  #show alias
  alias = !git config --list|grep 'alias\\.'| \
    sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/'|sort

# vim:set ft=gitconfig:
[push]
	default = simple
