[user]
  name = Stimim Chen
  email = 106878+Stimim@users.noreply.github.com

[color]
  diff   = auto
  status = auto
  branch = auto
  interactive = auto
  log = auto
  ui = true
  pager = true

[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = "ED=$(command -v nvim >/dev/null && echo nvim || echo vim); $ED"
  excludesfile = ~/dotfiles/gitconfigs/gitignore

[alias]
  au = add -u
  ci = commit
  ca = commit --amend
  co = checkout
  st = status
  dw = diff --color-words
  df = diff
  br = branch
  ri = rebase -i
  rc = rebase --continue
  cc = cherry-pick --continue
  lg = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %cr%Creset'
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

  #show alias
  alias = !git config --list|grep 'alias\\.'| \
    sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/'|sort

